<Page x:Class="PJA_Skills_032.Pages.SignupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:PJA_Skills_032.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="TxtEmail" PlaceholderText="Email" />
        <PasswordBox x:Name="TxtPassword" PlaceholderText="Password" />
        <TextBox x:Name="TxtFullName" PlaceholderText="Full name" />
        
        <Button x:Name="ButtonSignUp" Content="Sign up" Click="ButtonSignUp_OnClick"/>
    </StackPanel>
</Page>



