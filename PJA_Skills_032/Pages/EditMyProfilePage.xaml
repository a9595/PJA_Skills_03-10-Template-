<Page x:Class="PJA_Skills_032.Pages.EditMyProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:PJA_Skills_032.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Loading="EditMyProfilePage_OnLoading"
      mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="TextBlockFullName"
                   Height="20"
                   Text="Full Name"
                   TextWrapping="Wrap" />
        <TextBox x:Name="TextBoxFullName"
                 Height="32"
                 RelativePanel.Below="TextBlockFullName"
                 Text="Bob Marley"
                 TextWrapping="Wrap" />

        <TextBlock x:Name="TextBlockWantLearn"
                   Height="20"
                   RelativePanel.Below="TextBoxFullName"
                   Text="What do I want to learn:"
                   TextWrapping="Wrap" />

        <StackPanel x:Name="StackPanelToLearn"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    RelativePanel.Below="TextBlockWantLearn"
                    Style="{StaticResource ProfileCard}">
            <TextBlock Height="21"
                       Margin="9,3,9,0"
                       Style="{StaticResource FlyoutPickerTitleTextBlockStyle}"
                       Text="Want to learn:"
                       TextWrapping="Wrap" />
            <GridView x:Name="GridViewLearn"
                      ItemContainerStyle="{StaticResource GridViewItemSkillStyle}"
                      ItemTemplate="{StaticResource SkillGridViewTemplate}"
                      ItemsSource="{x:Bind ViewModel.CurrentUser.SkillsWantToLearn, Mode=OneWay}" />
        </StackPanel>

    </RelativePanel>
</Page>
