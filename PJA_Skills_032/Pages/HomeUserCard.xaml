<UserControl x:Class="PJA_Skills_032.Pages.HomeUserCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:PJA_Skills_032.Pages"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="HomeUserCardControl"
             d:DataContext="{d:DesignInstance local:HomeUserCard}"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <StackPanel x:Name="LayoutRoot" Orientation="Horizontal">
        <TextBlock Width="100"
                   VerticalAlignment="Center"
                   Text="{Binding Path=Label}" />
        <TextBox Width="100" Text="{Binding Path=Value}" />
    </StackPanel>
</UserControl>